<?xml version="1.0" encoding="ASCII" ?>
<forth xmlns="http://forth.org.ru/ForthML/">
<!-- 2006, Feb.2007 ruvim@forth.org.ru -->

<cell name="M" />

<def name="INC-M" ds=" -- "> M @    <if>  -5005 THROW </if> M 1+!</def>
<def name="DEC-M" ds=" -- "> M @ 0= <if>  -5004 THROW </if> M 1-!</def>

<def name="INC-S" ds=" -- "> STATE 1+!  </def>
<def name="DEC-S" ds=" -- "> STATE @ 0= <if> -5004 THROW </if> STATE 1-! </def>

<def name="T-LIT" ds=" x -- x | ">
  M @ <if> STATE @ <if>
    STATE @ TS-LIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
  STATE @ TS-LIT
</def>
<def name="T-EXEC" ds=" i*x xt -- j*x | i*x">
  M @ <if> STATE @ <if>
    STATE @ TS-LIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
  STATE @ TS-EXEC
</def>
<def name="T-SLIT" ds=" c-addr u -- c-addr2 u | ">
  M @ <if> STATE @ <if>
    STATE @ TS-SLIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
  STATE @ TS-SLIT
</def>
<def name="T-2LIT" ds=" x x -- x x | ">
  M @ <if> STATE @ <if>
    STATE @ TS-2LIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
  STATE @ TS-2LIT
</def>


<def name="M-LIT" ds=" x -- x | ">
  M @ <if> STATE @ <if>
    STATE @ TS-LIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
</def>
<def name="M-EXEC" ds=" i*x xt -- j*x | i*x">
  M @ <if> STATE @ <if>
    STATE @ TS-LIT
    <lit>GERM</lit> STATE @ TS-EXEC
  <exit/></if></if>
  EXECUTE
</def>

<def name="M-DEC-STATE" ds=" -- ">
  <xt-of name="DEC-S"/> M-EXEC
</def>
<def name="M-INC-STATE" ds=" -- ">
  <xt-of name="INC-S"/> M-EXEC
</def>

</forth>