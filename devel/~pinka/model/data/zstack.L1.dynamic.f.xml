<?xml version="1.0" encoding="UTF-8"?>
<forth xmlns="http://forth.org.ru/ForthML/">
<!-- 2010 -->

<cell name="ZP"/>
<cell name="Z0"/>

<include href="zstack.L1.immutable.f.xml"/>

<def name="2Z@" ds=" -- x x ">
  ZP @ CELL+ @
  ZP @ @
</def>
<def name="2>Z" ds=" x x -- ">
  -2 CELLS ZP +!  ZP@ 2!
</def>
<def name="2Z>" ds=" -- x x ">
  ZP@ 2@   2 CELLS ZP +!
</def>


<cell name="Z9"/>

<def name="?ZP" ds=" -- ">
  Z0 @ ZP@ ULT <if> ABORT </if>
  ZP@ Z9 @ ULT <if> ABORT </if>
</def>

<slot> limit zbuf </slot>
  
<handler event="shutdown">
  zbuf ?DUP <if> FREE THROW     0 zbuf! </if>
  Z9 0! 
  0 0 ZASSUME
</handler>

<handler event="startup">
  limit 3 + CELLS ALLOCATE THROW zbuf!
  zbuf CELL+ Z9 !
  Z9 @ limit CELLS  ZASSUME
</handler>

<init> 120 limit! </init>

</forth>